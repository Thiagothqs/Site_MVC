@model IEnumerable<novo.Models.Produto>
@{
    ViewBag.Title = "Index";
}

<h2>Listagem de Produtos</h2>
<br />
@Html.ActionLink("Novo Produto", "Create")
<br />
<table width="100%" border="1">
    <tr>
        <th>ID</th>
        <th>Descrição</th>
        <th>Quantidade</th>
        <th>Preço de Venda</th>
        <th>Alterar</th>
        <th>Excluir</th>
    </tr>
    @foreach(var item in Model)
    {
    <tr>
        <td>@item.Id_Produto</td>
        <td>@item.Descricao</td>
        <td>@item.Quantidade</td>
        <td>@item.Preco_Venda</td>
        <td><a href="@Url.Action("Edit", new {id = item.Id_Produto})">ALTERAR</a></td>
        <td><a href="@Url.Action("Delete", new {id = item.Id_Produto})">EXCLUIR</a></td>
    </tr>
    }
</table>